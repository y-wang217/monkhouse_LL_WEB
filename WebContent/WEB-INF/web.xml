<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" version="3.1">
  <welcome-file-list>
    <welcome-file>index_page.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
    <servlet-name>Login</servlet-name>
    <servlet-class>web.servlet.LoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Login</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>Main</servlet-name>
    <servlet-class>web.servlet.MainServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Main</servlet-name>
    <url-pattern>/main</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>GenerateLetter</servlet-name>
    <servlet-class>web.servlet.GenerateLawyersLetterServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>GenerateLetter</servlet-name>
    <url-pattern>/gen_lawyers_letter</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>FileUpload</servlet-name>
    <servlet-class>web.servlet.FileHandlingServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>FileUpload</servlet-name>
    <url-pattern>/UploadDownloadFileServlet</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>EditContent</servlet-name>
    <servlet-class>web.servlet.EditContentServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>EditContent</servlet-name>
    <url-pattern>/section_editor</url-pattern>
  </servlet-mapping>
</web-app>